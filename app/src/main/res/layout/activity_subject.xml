<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.Subject">

    <EditText
        android:id="@+id/editText_addSubject"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Enter subject"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="select class for this subject"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:id="@+id/spinner_addSubject"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_addSubject"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject List:"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <ListView
        android:id="@+id/listView_addSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>